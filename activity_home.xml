<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nnnnew.androidproject.HomeActivity"
    android:background="#bababa">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <Button
            android:id="@+id/calenda"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/calendar_button"
            android:text=" " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Daily Cost"
            android:layout_weight="3"
            android:textColor="#F49B00"
            android:textStyle="bold"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/add_button"
            android:text=" " />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/home_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/on_home_button"
            android:text=" " />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#bababa" />

        <Button
            android:id="@+id/transection_button"
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/transection_button"
            android:text=" " />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#bababa" />


        <Button
            android:id="@+id/graph_button"
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/graph_button"
            android:text=" " />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#bababa" />

        <Button
            android:id="@+id/setting_button"
            android:layout_weight="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/setting_button"
            android:text=" " />

    </LinearLayout>


</RelativeLayout>
